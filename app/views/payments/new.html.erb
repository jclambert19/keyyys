<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>Purchase of teddy <%= @subscription.id %></h1>
      <%= form_tag subscription_payments_path(@subscription) do %>
        <article>
          <label class="amount">
            <span>Amount: <%= humanized_money_with_symbol(@subscription.price) %></span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="my-subscription"
          data-description="Subscription <%= @subscription.id %>"
          data-amount="<%= @subscription.price_cents %>"
          data-currency="EUR"></script>
      <% end %>
    </div>
  </div>
</div>
