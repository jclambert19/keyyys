<div class="container">
  <div class="text-center">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1> Validez votre abonnement </h1>
      <hr>
       <%= form_tag subscription_payments_path(@subscription) do %>
        <article>
          <label class="amount">
            <span> Le montant de l'abonnement annuel: <%= humanized_money_with_symbol(@subscription.price) %></span>
          </label>
        </article>
        <hr>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-email="<%= current_user.email %>"
          data-name="my-subscription"
          data-description="Subscription <%= @subscription.id %>"
          data-amount="<%= @subscription.price_cents %>"
          data-currency="EUR"></script>
      <% end %>
    </div>
  </div>
</div>

